{
  "name": "executable-stories-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "TS-first scenario/given/when/then helpers for Jest, Vitest, and Playwright with Markdown user-story doc generation.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "type-check": "turbo type-check",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "quality": "turbo run build && turbo run lint && turbo run type-check && turbo run test --filter=!cypress-example",
    "format": "prettier --write .",
    "verify:junit5": "./scripts/verify-junit5.sh",
    "verify:pytest": "./scripts/verify-pytest.sh",
    "verify:go": "./scripts/verify-go.sh",
    "verify:rust": "./scripts/verify-rust.sh",
    "verify:xunit": "./scripts/verify-xunit.sh"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^10.0.1",
    "eslint-config-executable-stories": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unicorn": "^63.0.0",
    "turbo": "^2.8.7",
    "typescript-eslint": "^8.55.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.1",
    "prettier": "^3.8.1"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@10.28.1",
  "pnpm": {
    "onlyBuiltDependencies": ["cypress", "esbuild"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jagreehal/executable-stories.git"
  },
  "author": "Jag Reehal <jag@jagreehal.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jagreehal/executable-stories/issues"
  },
  "homepage": "https://github.com/jagreehal/executable-stories#readme"
}
