{
  "name": "vitest-executable-stories",
  "version": "0.1.0",
  "description": "TS-first scenario/given/when/then helpers for Vitest with Markdown user-story doc generation for Confluence.",
  "author": "Jag Reehal <jag@jagreehal.com>",
  "homepage": "https://github.com/jagreehal/story-docs#readme",
  "bugs": {
    "url": "https://github.com/jagreehal/story-docs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jagreehal/executable-stories.git"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "bin": {
    "vitest-executable-stories": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "peerDependencies": {
    "vitest": ">=4.0.18"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@types/picomatch": "^4.0.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "vitest",
    "bdd",
    "gherkin",
    "user-story",
    "markdown",
    "confluence",
    "scenario",
    "given",
    "when",
    "then"
  ],
  "scripts": {
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "clean": "rm -rf dist",
    "test": "pnpm build && vitest run",
    "quality": "pnpm type-check && pnpm test && pnpm lint"
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "picomatch": "^4.0.3"
  }
}
